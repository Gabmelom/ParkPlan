@inherits LayoutComponentBase

<MudThemeProvider Theme="@_myCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <NavBar OnClick="@DrawerToggle"/>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" ClipMode="DrawerClipMode.Docked">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-3 pt-3">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    readonly MudTheme _myCustomTheme = new()
    {
        Palette = new Palette()
        {
            Primary = "#008080",
            Secondary = "#D2DDD4",
            AppbarBackground = "#D2DDD4",
            AppbarText = "#171717",
        }
    };

}