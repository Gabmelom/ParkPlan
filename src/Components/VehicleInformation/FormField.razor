<MudStack Spacing="1">
    <MudText Typo="Typo.body1">
        <b>@Label</b>
    </MudText>
    @if(isDropDown){
        <MudSelect T="string" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
            @foreach (var option in DropDownOptions)
            {
                <MudSelectItem T="string" Value="@option" />
            }
        </MudSelect>
    }
    else{
        <MudTextField @bind-Value="TextValue" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
    }
</MudStack>

@code {

    public string TextValue { get; set; }

    [Parameter] public string? Label { get; set; }

    [Parameter] public List<String> DropDownOptions { get; set; } = new List<String>();

    [Parameter] public bool isDropDown { get; set; } = true;
}