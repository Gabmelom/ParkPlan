<MudCard Elevation="0" Outlined="true" Class="rounded-xl">
    <MudCardHeader Class="pb-0">
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Color="Color.Primary" Class="ml-6">Carleton University parking permit</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudGrid>
            <MudItem xs="8">
                <MudStack Row="true" Style="height: 100%" Class="ml-6" Spacing="16">
                    <MudStack>
                        @foreach (var label in new[] { "Permit #", "Lot", "Exp. date" })
                        {
                            <MudText><b>@label:</b></MudText>
                        }
                    </MudStack>
                    <MudStack>
                       @foreach (var item in new[] { "123456", "P18", "2021-08-31" })
                       {
                           <MudText>@item</MudText>
                       }
                    </MudStack>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions Class="d-flex justify-end">
        <MudButton Class="align-self-end rounded-xl mr-6"
                   Style="width: 100px"
                   DisableElevation="true"
                   Variant="Variant.Filled"
                   Color="Color.Secondary">
                   Edit</MudButton>
    </MudCardActions>
</MudCard>

