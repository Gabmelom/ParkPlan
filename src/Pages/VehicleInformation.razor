@page "/VehicleInformation"
@using ParkPlan.Components.VehicleInformation

<MudText Typo="Typo.h4" Color="Color.Primary">Vehicle Registration</MudText>

<MudStack Justify="Justify.Center" Style="height:100%">
    <MudGrid Justify="Justify.Center" Class="mt-16">
        <MudItem xs="6">
            <MudStack>
                <MudImage Src="Honda/civic_grey.png" Alt="Car" Elevation="0" Class="image" />
            </MudStack>
        </MudItem>
        @* Vehicle Information form *@
        <MudItem xs="6">
            <VehicleInformationForm />
        </MudItem>
        <MudButton Class="mt-10" Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">
            Save
        </MudButton>
    </MudGrid>
</MudStack>




