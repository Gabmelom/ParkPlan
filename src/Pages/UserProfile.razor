@page "/profile"
@using ParkPlan.Components.UserProfile

<MudText Typo="Typo.h4" Color="Color.Primary" Class="py-4">User Information</MudText>

<MudGrid>
    <MudItem xs="12" sm="12" md="6" lg="3" Class="d-flex justify-center">
        <MudPaper Class="parkplan-card rounded-xl">
            <MudStack Class="justify-space-around align-center py-4" Style="height: 100%">
                <MudImage Src="Dennis.jpg" 
                          Alt="Profile Picture" 
                          Class="profile-picture" 
                          ObjectFit="ObjectFit.Cover" 
                          ObjectPosition="ObjectPosition.Center"/>
                <MudStack>
                    <MudText Align="Align.Center" Typo="Typo.h6">Dennis Lacasse</MudText>
                    <MudText Align="Align.Center" Typo="Typo.body2">Male, 19</MudText>
                    <MudText Align="Align.Center" Typo="Typo.body2">Student</MudText>
                    <MudText Align="Align.Center" Typo="Typo.body2">dennis.lac@gmail.com</MudText>
                </MudStack>
            </MudStack>
        </MudPaper>    
    </MudItem>
    <MudItem xs="12" sm="12" md="6" lg="7">
        <MudStack>
            <CarProfileCard/>
            <PaymentMethodCard/>
            <ParkingPermitCard/>
        </MudStack>
    </MudItem>
    <MudItem xs="12" lg="2">
        <MudStack AlignItems="AlignItems.End" Class="pl-3">
            <MudText Typo="Typo.h6" Color="Color.Primary">Quick Links</MudText>
            <MudLink Href="/VehicleInformation" Typo="Typo.body2" Color="Color.Default">Add new vehicle</MudLink>
            <MudLink Typo="Typo.body2" Color="Color.Default">Manage parking permits</MudLink>
            <MudLink Typo="Typo.body2" Color="Color.Default">Add payment method</MudLink>
        </MudStack>
    </MudItem>
</MudGrid>

<style>
    .parkplan-card {
        width: 350px;
        max-height: 405px;
        aspect-ratio: 0.8;
        background: var(--mud-palette-secondary);
    }
    
    .profile-picture {
        border-radius: 50%;
        width: 60%;
        aspect-ratio: 1;
    }
</style>

