@page "/login"
@using ParkPlan.Components.Login

<PageTitle>Login</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" Class="d-flex justify-center">
        <ParkPlanLogo Typo="Typo.h2"/>
    </MudItem>
    @if(ShowRegistrationForm)
    {
        @* Registration form *@
        <MudItem xs="6">
            <MudStack Class="justify-center align-center">
                <RegistrationForm/>
                <MudText>Already a member? <MudLink Class="cursor-pointer" @onclick="ToggleRegistrationForm">Click Here</MudLink></MudText>
            </MudStack>
        </MudItem>
    }
    else
    {
        @* Login form *@
        <MudItem xs="6">
            <MudStack Class="justify-center align-center">
                <LoginForm/>
                <MudText>New to ParkPlan? <MudLink Class="cursor-pointer" @onclick="ToggleRegistrationForm">Click Here</MudLink></MudText>    
            </MudStack>
        </MudItem>
    }
    
    
</MudGrid>

@code{

    public bool ShowRegistrationForm = false;
    
    void ToggleRegistrationForm()
    {
        ShowRegistrationForm = !ShowRegistrationForm;
    }
}
